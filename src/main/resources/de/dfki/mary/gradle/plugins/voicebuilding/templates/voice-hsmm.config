# Auto-generated config file for voice ${project.voice.name}

name = ${project.voice.name}
locale = ${project.voice.locale}

####################################################################
####################### Module settings  ###########################
####################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.

hmm.voices.list = ${project.voice.name}

# If this setting is not present, a default value of 0 is assumed.
voice.${project.voice.name}.wants.to.be.default = 0

# Set your voice specifications
voice.${project.voice.name}.gender = ${project.voice.gender}
voice.${project.voice.name}.locale = ${project.voice.locale}
voice.${project.voice.name}.domain = general
voice.${project.voice.name}.samplingRate = ${project.voice.samplingRate}

# HMM Voice-specific parameters 
# parameters used during models training 
# MGC: stage=gamma=0 alpha=0.42 linear gain (default) 
# LSP: gamma>0  
#          LSP: gamma=1 alpha=0.0  linear gain/log gain 
#      Mel-LSP: gamma=1 alpha=0.42 log gain 
#      MGC-LSP: gamma=3 alpha=0.42 log gain 
voice.${project.voice.name}.alpha = ${project.voiceAlpha}
voice.${project.voice.name}.gamma = ${project.voiceGamma}
voice.${project.voice.name}.logGain = false

# Parameter beta for postfiltering 
voice.${project.voice.name}.beta = ${project.voiceBeta}

# HMM Voice-specific files
# Information about trees
voice.${project.voice.name}.Ftd = jar:/marytts/voice/${project.voice.nameCamelCase}/tree-dur.inf
voice.${project.voice.name}.Ftf = jar:/marytts/voice/${project.voice.nameCamelCase}/tree-lf0.inf
voice.${project.voice.name}.Ftm = jar:/marytts/voice/${project.voice.nameCamelCase}/tree-mgc.inf
voice.${project.voice.name}.Fts = jar:/marytts/voice/${project.voice.nameCamelCase}/tree-str.inf

# Information about means and variances PDFs 
voice.${project.voice.name}.Fmd = jar:/marytts/voice/${project.voice.nameCamelCase}/dur.pdf
voice.${project.voice.name}.Fmf = jar:/marytts/voice/${project.voice.nameCamelCase}/lf0.pdf
voice.${project.voice.name}.Fmm = jar:/marytts/voice/${project.voice.nameCamelCase}/mgc.pdf
voice.${project.voice.name}.Fms = jar:/marytts/voice/${project.voice.nameCamelCase}/str.pdf

# Information about Global Mean and Variance PDFs
voice.${project.voice.name}.useGV = true
voice.${project.voice.name}.maxMgcGvIter = ${project.voiceMaxMgcGvIter}
voice.${project.voice.name}.maxLf0GvIter = ${project.voiceMaxLf0GvIter}
voice.${project.voice.name}.Fgvf = jar:/marytts/voice/${project.voice.nameCamelCase}/gv-lf0-littend.pdf
voice.${project.voice.name}.Fgvm = jar:/marytts/voice/${project.voice.nameCamelCase}/gv-mgc-littend.pdf
voice.${project.voice.name}.Fgvs = jar:/marytts/voice/${project.voice.nameCamelCase}/gv-str-littend.pdf

# A context features file example for start-up testing.
voice.${project.voice.name}.FeaFile = jar:/marytts/voice/${project.voice.nameCamelCase}/${project.voiceFeatureFile}.pfeats

# Tricky phones file in case there were problematic phones during training, empty otherwise.
voice.${project.voice.name}.trickyPhonesFile = jar:/marytts/voice/${project.voice.nameCamelCase}/trickyPhones.txt

# Information about Mixed Excitation
voice.${project.voice.name}.useMixExc = true

# Filters for mixed excitation 
# File format: one column with all the taps, where the number of taps per filter = numTaps/numFilters 
voice.${project.voice.name}.Fif = jar:/marytts/voice/${project.voice.nameCamelCase}/mix_excitation_filters.txt
# Number of filters in bandpass bank
voice.${project.voice.name}.in = 5

# Information about acousticModels (if true allows prosody modification specified in MARYXML input)
voice.${project.voice.name}.useAcousticModels = true

# acoustic models to use (HMM models or carts from other voices can be specified)
# (uncoment to allow prosody modification specified in MARYXML input)
voice.${project.voice.name}.acousticModels = duration F0

voice.${project.voice.name}.duration.model = hmm
voice.${project.voice.name}.duration.attribute = d

voice.${project.voice.name}.F0.model = hmm
voice.${project.voice.name}.F0.attribute = f0
