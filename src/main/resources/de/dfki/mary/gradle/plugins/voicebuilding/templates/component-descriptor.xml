<?xml version="1.0" encoding="UTF-8"?>
<marytts-install xmlns="http://mary.dfki.de/installer">
    <voice gender="${voice.gender}" locale="${voice.language.equalsIgnoreCase(voice.region) ? voice.language : voice.locale}" name="${voice.name}" type="${voice.type}" version="${version}">
        <description>${voice.description}</description>
        <license href="${license.url}"/>
        <package filename="${fileName}" md5sum="${fileHash}" size="${fileSize}">
            <location folder="${location1_isFolder}" href="${location1}"/>
            <location folder="${location2_isFolder}" href="${location2}"/>
            <location folder="${location3_isFolder}" href="${location3}"/>
        </package>
        <depends language="${voice.language}" version="${maryttsVersion}"/>
    </voice>
</marytts-install>
